# Production Environment Configuration
# Copy this file to terraform.tfvars and update with your values

project_id   = "your-project-id"
project_name = "my-project"
region       = "us-east1"

# Network Configuration
public_subnet_cidrs  = ["10.2.1.0/24", "10.2.2.0/24"]
private_subnet_cidrs = ["10.2.3.0/24", "10.2.4.0/24"]
enable_nat_gateway   = true
enable_gke_ranges    = true

# GKE IP ranges
pod_ip_ranges     = ["10.6.0.0/16", "10.7.0.0/16"]
service_ip_ranges = ["10.8.0.0/20", "10.9.0.0/20"]

# Compute Configuration
machine_type       = "e2-standard-2"
enable_autoscaling = true
target_size        = 3
min_replicas       = 3
max_replicas       = 10

# Security Configuration
enable_kms_encryption = false
# kms_key_name = "projects/PROJECT_ID/locations/LOCATION/keyRings/RING_NAME/cryptoKeys/KEY_NAME"

allowed_cors_origins = ["https://yourdomain.com"]
enable_disk_snapshots = true
